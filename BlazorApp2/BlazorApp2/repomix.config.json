{
  "include": [
    "**/*.cs",
    "**/*.razor"
  ],
  "ignore": {
    "customPatterns": [
      "**/obj/**",
      "**/debug/**",
      "**/appsettings*.json",
      "**/Migrations/**"
    ]
  },
  "output": {
    "copyToClipboard": true,
    "style": "markdown",
    "compress": false,
    "fileSummary": true,
    "directoryStructure": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "instructionFilePath": "repomix-instruction.md"
  },
  "security": {
    "enableSecurityCheck": true
  }
}
